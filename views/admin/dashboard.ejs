<%- include('../partials/head'); -%>

  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12">
        <% if (successMessages && successMessages.length> 0) { %>
          <% successMessages.forEach((message, index)=> { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
              <strong>
                <%= message %>
              </strong>
            </div>
            <% }); %>
              <% } %>
                <% if (deleteMessage && deleteMessage.length> 0) { %>
                  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong>
                      <%= deleteMessage %>
                    </strong>
                  </div>
                  <% } %>

                    <form action="/admin/searchUser" method="post">
                      <div class="mb-3 d-flex">
                        <div class="input-group">
                          <input type="text" class="form-control ms-auto" placeholder="Search..." id="searchUser"
                            name="searchUser" style="max-width: 250px">
                          <button class="btn btn-primary">
                            <i class="fas fa-search"></i> Search
                          </button>
                        </div>
                      </div>
                    </form>


                    <div class="table-responsive">

                      <% if(users !='' ) { %>
                        <table class="table table-striped text-center my-3">
                          <thead>
                            <tr class="table-dark">
                              <th>id</th>
                              <th>Name</th>
                              <th>Email</th>
                              <th>isAdmin</th>
                              <th>Action</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% users.forEach((row, index)=> { %>
                              <tr>
                                <td>
                                  <%= index +1 %>
                                </td>
                                <td>
                                  <%= row.name %>
                                </td>
                                <td>
                                  <%= row.email %>
                                </td>
                                <td>
                                  <%= row.is_admin %>
                                </td>
                                <td>
                                  <a href="/admin/edit/<%= row._id %>" class="text-success"><i
                                      class="fas fa-edit fa-lg mx-2"></i></a>
                                  <a href="/admin/delete/<%= row._id %>" class="text-danger"><i
                                      class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                              </tr>

                              <% }) %>
                          </tbody>
                        </table>
                        <% } else { %>
                          <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                          <% } %>

                    </div>
      </div>
    </div>
  </div>





  <%- include('../partials/footer'); -%>